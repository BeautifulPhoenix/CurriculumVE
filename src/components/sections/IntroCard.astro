---
import { Book, Github, Linkedin, PanelsTopLeft, Twitter, Youtube } from 'lucide-react';
import { PROFILE } from "../../content/profileData";
import { Button } from '../ui/button';
---

<div class="flex h-full w-full flex-col sm:flex-row animate-appear relative">
  <div class="flex flex-col justify-between gap-4 md:max-h-[300px] w-full">
    <div class="flex h-full flex-col">
      <p class="m-0 text-xl font-light">
        Hi, I'm
        <b class="font-bold">{PROFILE.firstName}</b>.
      </p>
      <ul class="pt-4">
        {PROFILE.shortIntros.map((intro, index) => (
          <>
            {index === (PROFILE.shortIntros.length / 2)
              ? <br/>
              : <></>}
            <li>{intro}</li>
          </>
        ))}
      </ul>
    </div>
    <div class="flex flex-wrap gap-4">
      <a href={PROFILE.links.github} aria-label="github profile" target="_blank">
        <Button aria-label="github profile">
          <Github/>
          <span class="sr-only">GitHub Profile</span>
        </Button>
      </a>
      {PROFILE.links?.linkedin && <a href={PROFILE.links.linkedin} aria-label="linkedin profile" target="_blank">
        <Button>
          <Linkedin/>
          <span class="sr-only">LinkedIn Profile</span>
        </Button>
      </a>}
      {PROFILE.links?.youtube && <a href={PROFILE.links.youtube} aria-label="youtube channel" target="_blank">
          <Button aria-label="youtube channel">
            <Youtube/>
            <span class="sr-only">Youtube Channel TechTim42</span>
          </Button>
        </a>
      }
      {PROFILE.links?.bluesky && <a href={PROFILE.links.bluesky} aria-label="bluesky profile" target="_blank">
          <Button>
            <PanelsTopLeft/>
            <span class="sr-only">bluesky profile</span>
          </Button>
        </a>
      }
      {PROFILE.links?.twitter && <a href={PROFILE.links.twitter} aria-label="twitter profile" target="_blank">
          <Button>
            <Twitter/>
            <span class="sr-only">Twitter profile</span>
          </Button>
        </a>
      }
      {PROFILE.links?.goodreads && <a href={PROFILE.links.goodreads} aria-label="goodreads profile" target="_blank">
          <Button>
            <Book/>
            <span class="sr-only">Goodreads</span>
          </Button>
        </a>
      }
    </div>
  </div>
  <div class="w-full flex justify-center mt-8 sm:mt-0">
    <img
      src={PROFILE.avatarUrl}
      class="max-h-[200px] w-auto sm:max-h-[256px] opacity-70 sm:opacity-100"
      width="100%"
      height="auto"
      alt={`image of ${PROFILE.name}`}
    />
  </div>
</div>

